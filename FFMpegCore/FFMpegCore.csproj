<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <Description>A .NET Standard FFMpeg/FFProbe wrapper for easily integrating media analysis and conversion into your .NET applications. Uses SkiaSharp instead of System.Drawing.Common.</Description>
        <PackageVersion>5.0.0</PackageVersion>
        <PackageReleaseNotes>
        </PackageReleaseNotes>
        <PackageTags>ffmpeg ffprobe convert video audio mediafile resize analyze muxing</PackageTags>
        <Authors>Malte Rosenbjerg, Vlad Jerca, Max Bagryantsev, Dimitri Vranken</Authors>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageId>FFMpegCore.SkiaSharp</PackageId>
        <PackageProjectUrl>https://github.com/drasive/FFMpegCore</PackageProjectUrl>
        <RepositoryUrl>https://github.com/drasive/FFMpegCore</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Instances" Version="3.0.0" />
        <PackageReference Include="System.Text.Json" Version="7.0.1" />
    </ItemGroup>

</Project>
